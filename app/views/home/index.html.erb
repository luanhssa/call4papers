<% @events.each do |event| %>
<div class="row">
  <div class="col-md-4 logo--add">
    <img class="img-responsive img-rounded" src="<%=event.logo.homepage.url%>" alt="">
  </div>
  <div class="col-xs-8 content--custom">

    <div class="page-header">
      <h1><span class="fui-mic"></span> <%= event.name %></h1>
    </div>

    <%= simple_format(event.description) %>

    <div class="row demo-row">
      <div class="col-xs-6">
        <%=link_to event_path(event), class: "btn btn-lg btn-block btn-inverse" do %><span class="fui-eye"></span> Ver Palestras Cadastradas<%end%>
      </div>
      <div class="col-xs-6">
        <div class="dropdown">
          <button class="btn btn-lg btn-warning btn-block dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
            <span class="fui-new"></span>
            Cadastrar uma Palestra
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
            <%event.event_sections.each do |event_section|%>
              <li role="presentation"><%=link_to event_section.name, event_path(event, anchor: "event_#{dom_id(event_section)}"), role: "menuitem", tabindex: "-1" %></li>
            <%end%>
          </ul>
        </div>
      </div>
    </div> <!-- /row -->
  </div>
</div>
<% end %>
