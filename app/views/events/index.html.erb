<div class="page-header">
  <h1>Eventos</h1>
</div>

<div class="row">
  <%=flash_messages%>
  <%@events.each do |event|%>
    <div class="col-xs-4">
      <div class="tile">
        <%=image_tag event.logo.listing.url, class: "tile-image", alt: event.name %>
        <h3 class="tile-title"><%=event.name%></h3>
        <p><%=event.description%></p>
        <%=link_to "Veja mais", event_path(event), class: "btn btn-primary btn-large btn-block"%>
      </div>
    </div>
  <%end%>
</div>
